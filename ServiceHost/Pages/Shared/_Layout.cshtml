<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @if (@ViewData["Title"] != null)
    {
        <title>@ViewData["Title"] | Exclusive Shop</title>
    }
    else
    {
        <title>Exclusive Shop</title>
    }
    
    
    <meta name="description" content="@ViewData["metaDescription"]" />
    
    <meta name="keywords"  content="@ViewData["Keywords"]"/>

    <!-- Vendor CSS -->
    <link href="~/Theme/assets/css/vendors.css" rel="stylesheet">
    <!-- Main CSS -->
    <link href="~/Theme/assets/css/style.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Theme/assets/css/Custom.css" rel="stylesheet">
</head>

<body>

    @await Component.InvokeAsync("Header")

    @RenderBody()

    @await Component.InvokeAsync("Footer")

    <partial name="_SearchBox" />

    <!-- scroll to top  -->
    <div id="scroll-top">
        <span>برو به بالا</span><i class="ion-chevron-right"></i><i class="ion-chevron-right"></i>
    </div>
    <!-- end of scroll to top -->
    <!-- Vendor JS -->
    <script src="~/Theme/assets/js/vendors.js"></script>

    <!-- Active JS -->
    <script src="~/Theme/assets/js/active.js"></script>

    <!--Jquery Validate-->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


    <!--Recaptcha-->
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

</body>

</html>