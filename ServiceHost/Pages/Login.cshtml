@page
@model ServiceHost.Pages.LoginModel
@{
    ViewData["Title"] = "ورود";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title"> ورود</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="/Index">صفحه اصلی</a></li>
                            <li class="active"> ورود</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row justify-content-center">
                            <div class="col-sm-6 col-md-6 col-xs-6 col-lg-6">
                                @if (Model.LoginMessage != null)
                                {
                                    <div class="alert alert-danger">@Model.LoginMessage</div>
                                }
                                
                                @if (ViewBag.ChangePassword == true)
                                {
                                    <div class="alert alert-success">تغییر رمز عبور با موفقیت انجام شد</div>
                                }
                                <form method="post">
                                    <div class="login-form">
                                        <h4 class="login-title">ورود</h4>
                                        <div class="row">
                                            <div class="col-md-12 col-12">
                                                <label asp-for="Command.UserNameOrEmail">نام کاربری</label>
                                                <input type="text" placeholder="نام کاربری یا ایمیل" asp-for="Command.UserNameOrEmail">
                                                <span class="text-danger" asp-validation-for="Command.UserNameOrEmail"></span>
                                            </div>
                                            <div class="col-12">
                                                <label asp-for="Command.Password">کلمه عبور</label>
                                                <input type="password" placeholder="کلمه عبور" asp-for="Command.Password">
                                                <span class="text-danger" asp-validation-for="Command.Password"></span>
                                                
                                            </div>
                                            <div class="col-sm-6">

                                                <div class="check-box d-inline-block ml-0 ml-md-2">
                                                    <input type="checkbox"  asp-for="Command.RememberMe">
                                                    <label asp-for="Command.RememberMe">Remember me</label>
                                                </div>

                                            </div>

                                            <div class="col-sm-6 text-left text-sm-right">
                                                <a asp-page="/ForgotPassword" class="forget-pass-link"> رمز عبور خود را فراموش کرده اید ؟</a>
                                            </div>

                                            <div class="col-md-12">
                                                <button class="register-button">ورود</button>
                                            </div>

                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

