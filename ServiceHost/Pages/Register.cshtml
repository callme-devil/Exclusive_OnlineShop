@page
@model ServiceHost.Pages.RegisterModel
@{
    ViewData["Title"] = "ثبت نام";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title"> ثبت نام</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="/Index">صفحه اصلی</a></li>
                            <li class="active"> ثبت نام</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row justify-content-center">
                            <div class="col-sm-8 col-md-8 col-lg-8 col-xs-8">
                                @if (Model.RegisterMessage != null)
                                {
                                    <div class="alert alert-danger">@Model.RegisterMessage</div>
                                }
                                <form method="post">
                                    <div class="login-form">
                                        <h4 class="login-title">ثبت نام</h4>

                                        <div class="row">
                                            <div class="col-md-6 col-6 mb-20">
                                                <label asp-for="Command.Username">نام کاربری</label>
                                                <input type="text" asp-for="Command.Username" placeholder="نام کاربری">
                                                <span class="text-danger" asp-validation-for="Command.Username"></span>
                                            </div>
                                            <div class="col-md-6 col-6 mb-20">
                                                <label asp-for="Command.Email">ایمیل</label>
                                                <input type="email" asp-for="Command.Email" placeholder="ایمیل">
                                                <span class="text-danger" asp-validation-for="Command.Email"></span>
                                            </div>
                                            <div class="col-md-12 mb-20">
                                                <label asp-for="Command.Mobile">شماره موبایل</label>
                                                <input type="number" asp-for="Command.Mobile" placeholder="شماره موبایل">
                                                <span class="text-danger" asp-validation-for="Command.Mobile"></span>
                                                
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label asp-for="Command.Password">رمز عبور</label>
                                                <input type="password" asp-for="Command.Password" placeholder="رمز عبور">
                                                <span class="text-danger" asp-validation-for="Command.Password"></span>
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label asp-for="Command.RePassword">تکرار رمز عبور</label>
                                                <input type="password" asp-for="Command.RePassword" placeholder="تکرار رمز عبور">
                                                <span class="text-danger" asp-validation-for="Command.RePassword"></span>
                                            </div>
                                            <div class="col-12">
                                                <button class="register-button mt-0">ثبت نام</button>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
