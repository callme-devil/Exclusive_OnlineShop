@page
@model ServiceHost.Pages.RegisterModel
@{
    ViewData["Title"] = "ثبت نام";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title"> ثبت نام</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="/Index">صفحه اصلی</a></li>
                            <li class="active"> ثبت نام</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row justify-content-center">
                            <div class="col-sm-8 col-md-8 col-lg-8 col-xs-8">
                                @if (Model.RegisterMessage != null)
                                {
                                    <div class="alert alert-danger">@Model.RegisterMessage</div>
                                }
                                <form method="post">
                                    <div class="login-form">
                                        <h4 class="login-title">ثبت نام</h4>

                                        <div class="row">
                                            <div class="col-md-6 col-6 mb-20">
                                                <label>نام کاربری</label>
                                                <input type="text" name="username" placeholder="نام کاربری" required>
                                                @if (Model.RegisterValidation != null)
                                                {
                                                    <span class="text-danger">@Model.RegisterValidation</span>
                                                }
                                            </div>
                                            <div class="col-md-6 col-6 mb-20">
                                                <label>ایمیل</label>
                                                <input type="email" name="email" placeholder="ایمیل" required>
                                                @if (Model.RegisterValidation != null)
                                                {
                                                    <span class="text-danger">@Model.RegisterValidation</span>
                                                }
                                            </div>
                                            <div class="col-md-12 mb-20">
                                                <label>شماره موبایل</label>
                                                <input type="number" name="mobile" placeholder="شماره موبایل" required>
                                                @if (Model.RegisterValidation != null)
                                                {
                                                    <span class="text-danger">@Model.RegisterValidation</span>
                                                }
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label>رمز عبور</label>
                                                <input type="password" name="password" placeholder="رمز عبور" required>
                                                @if (Model.RegisterValidation != null)
                                                {
                                                    <span class="text-danger">@Model.RegisterValidation</span>
                                                }
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label>تکرار رمز عبور</label>
                                                <input type="password" name="repassword" placeholder="تکرار رمز عبور" required>
                                            </div>
                                            <div class="col-12">
                                                <button class="register-button mt-0">ثبت نام</button>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
