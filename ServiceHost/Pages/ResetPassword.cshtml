@page "{id}"
@model ServiceHost.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "بازیابی رمز عبور";
    var activeCode = ViewBag.ActiveCode;
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title"> بازیابی رمز عبور</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="/Index">صفحه اصلی</a></li>
                            <li class="active"> بازیابی رمز عبور</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row justify-content-center">
                            <div class="col-sm-6 col-md-6 col-xs-6 col-lg-6">
                                @if (Model.ResetMessage != null)
                                {
                                    <div class="alert alert-danger">@Model.ResetMessage</div>
                                }
                                @if (Model.ResetSuccessMessage != null)
                                {
                                    <div class="alert alert-success">@Model.ResetSuccessMessage</div>
                                }
                                <form method="post">
                                    <input type="hidden" asp-for="Command.ActiveCode" value="@activeCode"/>
                                    <div class="login-form">
                                        <h4 class="login-title">بازیابی رمز عبور</h4>
                                        <div class="row">
                                            <div class="col-md-12 col-12">
                                                <label asp-for="Command.Password">رمز عبور</label>
                                                <input type="password" placeholder="رمز عبور" asp-for="Command.Password">
                                                <span class="text-danger" asp-validation-for="Command.Password"></span>
                                            </div>
                                            <div class="col-12">
                                                <label asp-for="Command.RePassword">تکرار رمز عبور</label>
                                                <input type="password" placeholder="تکرار رمز عبور" asp-for="Command.RePassword">
                                                <span class="text-danger" asp-validation-for="Command.RePassword"></span>

                                            </div>

                                            <div class="col-md-12">
                                                <button class="register-button">تغییر</button>
                                            </div>

                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
