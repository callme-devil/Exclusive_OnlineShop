@using _0_Framework.Application
@model List<ShopManagement.Application.Contracts.Order.OrderItemViewModel>
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">مشاهده ایتم های سفارش</h4>
</div>

<div class="modal-body">
    <table class="table table-bordered">
        <thead>
        <tr>
        <th>#</th>
        <th>محصول</th>
        <th>تعداد</th>
        <th>قیمت واحد</th>
        <th>درصد تخفیف</th>
        <th>مبلغ کل بدون تخفیف</th>
        <th>مقدار مبلغ تخفیف</th>
        <th>مبلغ نهایی</th>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ProductName</td>
                <td>@item.Count</td>
                @if (item.HasDiscount)
                {
                    <td>@item.UnitPriceWithDiscount.ToMoney() تومان</td>
                }
                else
                {
                    <td>@item.UnitPrice.ToMoney() تومان</td>
                }
                <td>@item.DiscountRate %</td>
                <td>@item.TotalItemPrice.ToMoney() تومان</td>
                <td>@item.DiscountAmount.ToMoney() تومان</td>
                <td>@item.ItemPayAmount.ToMoney() تومان</td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
</div>
