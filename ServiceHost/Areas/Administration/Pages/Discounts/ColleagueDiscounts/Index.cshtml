@page
@model ServiceHost.Areas.Administration.Pages.Discounts.ColleagueDiscounts.IndexModel
@{
    ViewData["Title"] = "مدیریت تخفیفات همکاران";
}

<link href="~/AdminTheme/assets/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />


<div class="row">
    <div class="col-md-12">
        <div class="card-box">
            <h4 class="m-t-0 header-title"><b>جستجو در تخفیفات همکاران</b></h4>
            <div class="row m-t-40">
                <div class="col-sm-12">

                    <form class="form-inline" role="form" method="get">
                        <div class="form-group col-xs-2">
                            <label class="sr-only" asp-for="SearchModel.ProductId"></label>
                            <select asp-for="SearchModel.ProductId" class="form-control w-25" asp-items="Model.Products">
                                <option value="0">انتخاب محصول ... </option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success waves-effect waves-light m-l-15 w-md" formnovalidate>
                            <span>جستجو</span>
                            <i class="fa fa-search m-l-15"></i>
                        </button>
                        <a class="btn btn-danger waves-effect waves-light m-l-15 w-md" asp-page="./Index">
                            <span>پاک کردن فیلتر</span>
                            <i class="fa fa-remove m-l-15"></i>
                        </a>
                        <a type="submit" class="btn btn-primary waves-effect waves-light m-l-15 w-lg btn_left" href="#showmodal=@Url.Page("./Index" , "Create")">
                            <span>تعریف تخفیف همکار</span>
                            <i class="fa fa-plus m-l-15"></i>
                        </a>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">

            <h4 class="header-title m-t-0 m-b-30">@ViewData["Title"] (@Model.ColleagueDiscounts.Count)</h4>

            <table id="datatable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>محصول</th>
                        <th>درصد تخفیف</th>
                        <th>تاریخ تولید</th>
                        <th style="width: 260px">عملیات</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.ColleagueDiscounts)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.ProductName</td>
                            <td>@item.DiscountRate%</td>
                            <td>@item.CreationDate</td>
                            <td>
                                <a class="btn btn-trans btn-warning waves-effect waves-light m-l-15 w-md " href="#showmodal=@Url.Page("./Index" , "Edit" , new {id = item.Id})"><i class="fa fa-edit">ویرایش</i></a>
                                @if (item.IsRemoved)
                                {
                                    <a class="btn btn-trans btn-success waves-effect waves-light m-l-15 w-md" asp-page="./Index" asp-page-handler="Restore" asp-route-id="@item.Id"><i class="fa fa-check">فعال سازی</i></a>

                                }
                                else
                                {
                                    <a class="btn btn-trans btn-danger waves-effect waves-light m-l-15 w-md" asp-page="./Index" asp-page-handler="Remove" asp-route-id="@item.Id"><i class="fa fa-trash">غیر فعال</i></a>

                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div><!-- end col -->
</div>
<!-- end row -->
@section Scripts{
    <script src="~/AdminTheme/assets/SweetAlert/SweetAlert.js"></script>
    <script src="~/AdminTheme/assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/plugins/datatables/dataTables.bootstrap.js"></script>
    <script>
        $(document).ready(function() {
            $('#datatable').DataTable();
        });

        // Removing Pagination and SearchBox
        $('#datatable').DataTable({ searching: false, paging: true, info: true });

        //? Sweet Alert 
        var url = window.location.href;
        const MainUrl = url.split('?')[0];

        function Location() {
            window.location.href = MainUrl;
           
        }

        function Clear() {
            setTimeout(Location, 2500);
        }

    </script>


    @if (ViewBag.Removed == true)
    {
        <script>
            Swal.fire({
                position: 'top-end',
                title: 'غیر فعال سازی با موفقیت انجام شد',
                icon: 'success',
                confirmButtonText: 'خواندم',
                showCloseButton: false,
                timer: 2500
            }).then((result) => {
                if (result.isConfirmed) {
                    Location();
                }
            });

            Clear();
        </script>
    }
    @if (ViewBag.Restored == true)
    {
        <script>
            Swal.fire({
                position: 'top-end',
                title: 'فعال سازی با موفقیت انجام شد',
                icon: 'success',
                confirmButtonText: 'خواندم',
                showCloseButton: false,
                timer: 2500
            }).then((result) => {
                if (result.isConfirmed) {
                    Location();
                }
            });
            Clear();

        </script>
    }
}