@page
@model ServiceHost.Areas.Administration.Shop.ProductCategories.IndexModel
@{
    ViewData["Title"] = "مدیریت گروه محصولات";
}


<link href="~/AdminTheme/assets/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />

<div class="row">
    <div class="col-md-12">
        <div class="card-box">
            <h4 class="m-t-0 header-title"><b>جستجو در گروه محصولات</b></h4>
            <div class="row m-t-40">
                <div class="col-sm-12">

                    <form class="form-inline" role="form">
                        <div class="form-group col-xs-3">
                            <label class="sr-only"></label>
                            <input type="email" class="form-control" id="exampleInputEmail21" placeholder="نام گروه محصولی">
                        </div>
                        <button type="submit" class="btn btn-success waves-effect waves-light m-l-15 w-md">
                            <span>جستجو</span>
                            <i class="fa fa-search m-l-15"></i>
                        </button>
                        <button type="submit" class="btn btn-danger waves-effect waves-light m-l-15 w-md">
                            <span>پاک کردن فیلتر</span>
                            <i class="fa fa-remove m-l-15"></i>
                        </button>
                        <button type="submit" class="btn btn-primary waves-effect waves-light m-l-15 w-lg btn_left">
                            <span>ایجاد گروه محصول جدید</span>
                            <i class="fa fa-plus m-l-15"></i>
                        </button>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">

            <h4 class="header-title m-t-0 m-b-30">@ViewData["Title"]</h4>

            <table id="datatable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>عکس</th>
