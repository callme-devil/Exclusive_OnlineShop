@model ShopManagement.Application.Contracts.Slide.EditSlide
@{
}



<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش اسلاید : @Model.Heading</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="card-box">
                    <label asp-for="Picture" class="control-labercl">عکس</label>
                    <input type="file" class="dropify" asp-for="Picture" accept=".png, .jpg, .jpeg" data-max-file-size="5M" data-allowed-file-extensions="png jpg jpeg" data-max-file-size-preview="5M" data-default-file="/UploadedFiles/@Model.Image">
                    <span asp-validation-for="Picture" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureAlt" class="control-label">Alt</label>
                    <input type="text" class="form-control" asp-for="PictureAlt">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureTitle" class="control-label"> عنوان عکس</label>
                    <input type="text" class="form-control" asp-for="PictureTitle">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Heading" class="control-label">سر تیتر</label>
                    <input type="text" class="form-control" asp-for="Heading">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Title" class="control-label"> عنوان</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Text" class="control-label">متن</label>
                    <input type="text" class="form-control" asp-for="Text">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="BtnText" class="control-label"> متن دکمه</label>
                    <input type="text" class="form-control" asp-for="BtnText">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Link" class="control-label">
                        لینک
                    </label>
                    <input type="text" class="form-control" asp-for="Link">
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id"/>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light" formnovalidate>ویرایش</button>
    </div>
</form>

<script>
    $('.dropify').dropify({
        messages: {
            'default': 'Drag and drop a file here or click',
            'replace': 'Drag and drop or click to replace',
            'remove': 'Remove',
            'error': 'مشکلی پیش امده لطفا دوباره تلاش کنید'
        },
        error: {
            'fileSize': ' حجم فایل نمیتواند بیشتر از ({{ value }}) باشد .',
            'imageFormat': 'فرمت فایل مجاز نیست ({{ value }} فقط مجاز میباشد).'
        }
    });
</script>
