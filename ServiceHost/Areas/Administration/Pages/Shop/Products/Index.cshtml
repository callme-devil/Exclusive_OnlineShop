@page
@model ServiceHost.Areas.Administration.Pages.Shop.Products.IndexModel
@{
    ViewData["Title"] = "مدیریت محصولات";
}


<link href="~/AdminTheme/assets/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />


<div class="row">
    <div class="col-md-12">
        <div class="card-box">
            <h4 class="m-t-0 header-title"><b>جستجو در محصولات</b></h4>
            <div class="row m-t-40">
                <div class="col-sm-12">

                    <form class="form-inline" role="form" method="get">
                        <div class="form-group col-xs-2">
                            <label class="sr-only" asp-for="SearchModel.Name"></label>
                            <input asp-for="SearchModel.Name" class="form-control" placeholder="نام محصول">
                        </div>
                        <div class="form-group col-xs-2">
                            <label class="sr-only" asp-for="SearchModel.Code"></label>
                            <input asp-for="SearchModel.Code" class="form-control" placeholder="کد محصول">
                        </div>
                        <div class="form-group col-xs-2">
                            <label class="sr-only" asp-for="SearchModel.CategoryId"></label>
                            <select asp-for="SearchModel.CategoryId" class="form-control w-25" asp-items="Model.ProductCategories">
                                <option value="0">گروه محصول</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success waves-effect waves-light m-l-15 w-md" formnovalidate >
                            <span>جستجو</span>
                            <i class="fa fa-search m-l-15"></i>
                        </button>
                        <a class="btn btn-danger waves-effect waves-light m-l-15 w-md" asp-page="./Index">
                            <span>پاک کردن فیلتر</span>
                            <i class="fa fa-remove m-l-15"></i>
                        </a>
                        <a type="submit" class="btn btn-primary waves-effect waves-light m-l-15 w-lg btn_left" href="#showmodal=@Url.Page("./Index" , "Create")">
                            <span>ایجاد محصول جدید</span>
                            <i class="fa fa-plus m-l-15"></i>
                        </a>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">

            <h4 class="header-title m-t-0 m-b-30">@ViewData["Title"]</h4>

            <table id="datatable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>عکس</th>
                        <th>نام</th>
                        <th>کد</th>
                        <th>گروه</th>
                        <th>قیمت</th>
                        <th>موجودی</th>
                        <th>تاریخ تولید</th>
                        <th style="width: 260px">عملیات</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>
                                <img src="@item.Picture" style="width: 80px; height: 80px"/>
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Code</td>
                            <td>@item.CategoryName</td>
                            <td>@item.UnitPrice</td>
                            <td class="text-center">
                                @if (item.IsInStock)
                                {
                                    <i class="fa fa-check text-success fa-3x"></i>
                                }
                                else
                                {
                                    <i class="fa fa-remove text-danger fa-3x"></i>
                                }
                            </td>
                            <td>@item.CreationDate</td>
                            <td>
                                <a class="btn btn-trans btn-warning waves-effect waves-light m-l-15 w-md " href="#showmodal=@Url.Page("./Index" , "Edit" , new {id = item.Id})"><i class="fa fa-edit">ویرایش</i></a>
                                @if (item.IsInStock)
                                {
                                    <a class="btn btn-trans btn-danger waves-effect waves-light m-l-15 w-md" asp-page="./Index" asp-page-handler="EmptyStock" asp-route-id="@item.Id">اتمام موجودی</a>

                                }
                                else
                                {
                                    <a class="btn btn-trans btn-success waves-effect waves-light m-l-15 w-md" asp-page="./Index" asp-page-handler="IsInStock" asp-route-id="@item.Id">افزایش موجودی</a>

                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div><!-- end col -->
</div>
<!-- end row -->
@section Scripts{
    <script src="~/AdminTheme/assets/SweetAlert/SweetAlert.js"></script>
    <script src="~/AdminTheme/assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/plugins/datatables/dataTables.bootstrap.js"></script>
    <script>
        $(document).ready(function() {
            $('#datatable').DataTable();
        });

        // Removing Pagination and SearchBox
        $('#datatable').DataTable({ searching: false, paging: true, info: true });
    </script>
    
     
    @if (ViewBag.EmptyStock == true)
    {
        <script>
            Swal.fire({
                position: 'top-end',
                title: 'اتمام موجودی محصول با موفقیت انجام شد',
                icon: 'success',
                confirmButtonText: 'خواندم',
                showCloseButton: false,
                timer: 2500
            }).then((result) => {
                if (result.isConfirmed) {
                    Reload();
                }
            });

            var url = window.location.href;
            const MainUrl =url.split('?')[0];
          

            function Reload() {
                window.location.href = MainUrl;
            }
            setTimeout(Reload, 2500);
        </script>
    }
    @if (ViewBag.InStock == true)
    {
        <script>
            Swal.fire({
                position: 'top-end',
                title: 'افزایش موجودی محصول با موفقیت انجام شد',
                icon: 'success',
                confirmButtonText: 'خواندم',
                showCloseButton: false,
                timer: 2500
            }).then((result) => {
                if (result.isConfirmed) {
                    Reload();
                }
            });

            var url = window.location.href;
            const MainUrl =url.split('?')[0];

            function Reload() {
                window.location.href = MainUrl;
            }
            setTimeout(Reload, 2500);
        </script>
    }
}