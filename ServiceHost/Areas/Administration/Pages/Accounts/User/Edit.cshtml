@model AccountManagement.Application.Contracts.Account.EditAccount
@{
}



<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش کاربر : @Model.Username</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Fullname" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="Fullname">
                    <span asp-validation-for="Fullname" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Username" class="control-label">نام کاربری</label>
                    <input type="text" class="form-control" asp-for="Username">
                    <span asp-validation-for="Username" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Mobile" class="control-label">شماره موبایل</label>
                    <input type="number" class="form-control" asp-for="Mobile">
                    <span asp-validation-for="Mobile" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="RoleId" class="control-label">نقش</label>
                     <select class="form-control" asp-for="RoleId" asp-items='new SelectList(Model.Roles , "Id" , "Name")'>
                        <option value="0">گروه محصول انتخاب کنید</option>
                    </select>
                    <span asp-validation-for="RoleId" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card-box">
                    <label asp-for="ProfilePhoto" class="control-label">عکس پروفایل</label>
                    <input type="file" class="dropify" asp-for="ProfilePhoto" accept=".png, .jpg, .jpeg" data-max-file-size="3M" data-allowed-file-extensions="png jpg jpeg" data-max-file-size-preview="3M" data-default-file="/UploadedFiles/@Model.Image">
                    <span asp-validation-for="ProfilePhoto" class="error"></span>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id"/>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light" formnovalidate>ویرایش</button>
    </div>
</form>


<script>
    $('.dropify').dropify({
        messages: {
            'default': 'Drag and drop a file here or click',
            'replace': 'Drag and drop or click to replace',
            'remove': 'Remove',
            'error': 'مشکلی پیش امده لطفا دوباره تلاش کنید'
        },
        error: {
            'fileSize': ' حجم فایل نمیتواند بیشتر از ({{ value }}) باشد .',
            'imageFormat': 'فرمت فایل مجاز نیست ({{ value }} فقط مجاز میباشد).'
        }
    });
</script>
