@page
@model ServiceHost.Areas.Administration.Pages.Accounts.Role.IndexModel
@{
    ViewData["Title"] = "ویرایش اطلاعات کاربری";
}

<partial name="_JqueryValidator" />

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h1 class="breadcrumb-content__title"></h1>
                        <ul class="breadcrumb-content__page-map">
                            <li>
                                <a href="/">صفحه اصلی</a>
                            </li>
                            <li>
                                <a>@ViewData["Title"]</a>
                            </li>
                            <li class="active">username</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                @await Component.InvokeAsync("UserSideBar")
                <div class="col-sm-12 col-md-9 col-lg-9 userpanel-dashboard-right">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="m-t-0 header-title"><b>@ViewData["Title"]</b></h4>
                        </div>
                        <div class="panel-body">
                            <form method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-7">
                                        <div class="form-group">
                                            <label class="control-label">نام کاربری</label>
                                            <input type="text" class="form-control">
                                            <span class="error"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-7">
                                        <div class="form-group">
                                            <label class="control-label">ایمیل</label>
                                            <input type="email" class="form-control">
                                            <span class="error"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-7">
                                        <div class="card-box">
                                            <label class="control-label">اواتار</label>
                                            <input type="file" class="dropify"  accept=".png, .jpg, .jpeg" data-max-file-size="5M" data-allowed-file-extensions="png jpg jpeg" data-max-file-size-preview="5M">
                                            <span class="error"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12 m-t-20px">
                                        <button class="btn btn-success">ویرایش اطلاعات </button>
                                    </div>
                                </div>
                               
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>